<%= form_for @content do |f| %>
  <%= render 'shared/errors' %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, value: @content.name %>
  </div>

  <div class="form-group">
    <% if @content.image %>
      <%= link_to image_tag(@content.image.thumb('180x180#').url, alt: @content.name, class: 'img-thumbnail'),
                  @content.image.url, target: '_blank' %>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
<% end %>
<%= link_to 'Delete content', content_path(@content), method: :delete, class: 'btn btn-primary btn-lg'%>